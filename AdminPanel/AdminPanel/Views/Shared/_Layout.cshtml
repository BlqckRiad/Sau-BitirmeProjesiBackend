<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdminPanel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --sidebar-width: 280px;
            --primary-color: #4e73df;
            --secondary-color: #858796;
            --sidebar-bg: #4e73df;
            --sidebar-color: #fff;
            --topbar-height: 70px;
            --card-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }
        
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f8f9fc;
            min-height: 100vh;
            display: flex;
        }
        
        .sidebar {
            width: var(--sidebar-width);
            background: linear-gradient(180deg, var(--sidebar-bg) 0%, #224abe 100%);
            color: var(--sidebar-color);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 1000;
            transition: all 0.3s;
            box-shadow: var(--card-shadow);
        }
        
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .topbar {
            height: var(--topbar-height);
            background-color: white;
            box-shadow: var(--card-shadow);
            z-index: 999;
            position: sticky;
            top: 0;
        }
        
        .content-wrapper {
            flex: 1;
            padding: 2rem;
            background-color: #f8f9fc;
        }
        
        .user-info {
            padding: 2rem 1.5rem;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,.1);
        }
        
        .user-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-bottom: 1rem;
            margin-left : 4rem;
            object-fit: cover;
            border: 4px solid rgba(255,255,255,.2);
            box-shadow: 0 0.15rem 1.75rem 0 rgba(0, 0, 0, 0.15);
        }
        
        .nav-link {
            color: rgba(255,255,255,.8);
            padding: 1rem 1.5rem;
            margin: 0.2rem 1rem;
            border-radius: 0.35rem;
            display: flex;
            align-items: center;
            transition: all 0.3s;
            position: relative;
            justify-content: flex-start;
            gap: 0.75rem;
        }
        
        .nav-link i {
            font-size: 1.1rem;
            width: 24px;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .nav-link:hover {
            color: white;
            background-color: rgba(255,255,255,.1);
            transform: translateX(5px);
        }
        
        .nav-link.active {
            color: white;
            background-color: rgba(255,255,255,.2);
            font-weight: 600;
        }
        
        .card {
            border: none;
            border-radius: 0.5rem;
            box-shadow: var(--card-shadow);
            margin-bottom: 1.5rem;
        }
        
        .card-header {
            background-color: white;
            border-bottom: 1px solid #e3e6f0;
            padding: 1.25rem;
            font-weight: 600;
        }
        
        .navbar-brand {
            font-weight: 800;
            font-size: 1.25rem;
            color: var(--primary-color) !important;
        }
        
        .topbar-divider {
            width: 0;
            border-right: 1px solid #e3e6f0;
            height: calc(var(--topbar-height) - 2rem);
            margin: auto 1rem;
        }
        
        .dropdown-menu {
            border: none;
            box-shadow: var(--card-shadow);
            border-radius: 0.5rem;
            padding: 0.5rem;
        }
        
        .dropdown-item {
            padding: 0.75rem 1.25rem;
            border-radius: 0.35rem;
            display: flex;
            align-items: center;
        }
        
        .dropdown-item i {
            margin-right: 0.75rem;
            color: var(--secondary-color);
            width: 20px;
            text-align: center;
        }
        
        .dropdown-item:hover {
            background-color: #f8f9fc;
        }
        
        .notification-badge {
            position: absolute;
            top: 0;
            right: 0;
            transform: translate(25%, -25%);
        }
        
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #e3e6f0;
        }
        
       
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="user-info">
            <img src="" alt="User" class="user-image" style="display: none;">
            <i class="bi bi-person-circle user-image-placeholder" style="font-size: 4rem;"></i>
            <h5 class="mt-3 mb-1 user-name">Admin User</h5>
            <small class="user-role text-white-50">Administrator</small>
        </div>
        
        <ul class="nav flex-column mt-3">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "User" ? "active" : "")" asp-controller="User" asp-action="Index">
                    <i class="bi bi-people"></i> Kullanıcılar
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Message" ? "active" : "")" asp-controller="Message" asp-action="Index">
                    <i class="bi bi-envelope"></i> Mesajlar
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Settings" ? "active" : "")" asp-controller="Settings" asp-action="Index">
                    <i class="bi bi-gear"></i> Ayarlar
                </a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        <nav class="navbar navbar-expand topbar">
            <div class="container-fluid">
                <button class="btn btn-link d-md-none rounded-circle me-3" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <span class="me-2 d-none d-lg-inline text-gray-600 small user-name">Admin User</span>
                            <img src="" alt="User" class="user-avatar user-image" style="display: none;">
                            <i class="bi bi-person-circle user-image-placeholder"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="#">
                                <i class="bi bi-person"></i> Profile
                            </a>
                            <a class="dropdown-item" href="#">
                                <i class="bi bi-gear"></i> Settings
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/auth.js"></script>
    <script>
        // Sidebar toggle for mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('show');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
